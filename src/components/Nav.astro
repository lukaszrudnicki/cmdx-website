---
import { Image } from 'astro:assets';
import logo from '../assets/cmdx - logo.svg';

const navLinks = [
  { href: '/', label: 'Strona główna' },
  { href: '/blog', label: 'Blog' },
  { href: '/portfolio', label: 'Portfolio' },
];
---

<nav class="sticky top-0 z-50 bg-white/95 backdrop-blur-lg border-b border-[#E5E5E7]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <Image
          src={logo}
          alt="CMDX Logo"
          class="h-10 w-auto transform group-hover:scale-105 transition-transform"
          loading="eager"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-[#1D1D1F] hover:text-[#0066CC] font-medium transition-colors"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-full text-[#1D1D1F] hover:bg-[#F5F5F7] transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-[#E5E5E7] bg-white">
    <div class="px-4 py-4 space-y-3">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="block px-4 py-2 text-[#1D1D1F] hover:bg-[#F5F5F7] hover:text-[#0066CC] rounded-full font-medium transition-colors"
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
