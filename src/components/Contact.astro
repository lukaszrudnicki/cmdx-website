---
// Komponent sekcji kontaktowej z formularzem zabezpieczonym przed spamem
---

<section id="kontakt" class="contact-section">
  <div class="container">
    <h2>Skontaktuj się ze mną</h2>

    <div class="contact-content">
      <!-- Informacje kontaktowe -->
      <div class="contact-info">
        <div class="info-item">
          <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          <div>
            <h3>Email</h3>
            <a href="mailto:kontakt@cmdx.pl">kontakt@cmdx.pl</a>
          </div>
        </div>

        <div class="info-item">
          <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          <div>
            <h3>Telefon</h3>
            <a href="tel:+48123456789">+48 123 456 789</a>
          </div>
        </div>
      </div>

      <!-- Formularz kontaktowy -->
      <form class="contact-form" method="POST" action="/api/contact">
        <input type="hidden" name="timestamp" id="timestamp" value="">

        <!-- Honeypot field - ukryte pole pułapka dla botów -->
        <div class="honeypot" aria-hidden="true">
          <label for="website">Strona internetowa (nie wypełniaj)</label>
          <input type="text" name="website" id="website" tabindex="-1" autocomplete="off">
        </div>

        <div class="form-group">
          <label for="name">Imię i nazwisko *</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            minlength="2"
            autocomplete="name"
          >
        </div>

        <div class="form-group">
          <label for="email">Email *</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            autocomplete="email"
          >
        </div>

        <div class="form-group">
          <label for="subject">Temat</label>
          <input
            type="text"
            id="subject"
            name="subject"
            autocomplete="off"
          >
        </div>

        <div class="form-group">
          <label for="message">Wiadomość *</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            minlength="10"
          ></textarea>
        </div>

        <button type="submit" class="submit-btn">
          Wyślij wiadomość
        </button>
      </form>
    </div>
  </div>
</section>

<style>
  .contact-section {
    background: white;
    padding: 80px 20px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 60px;
    color: #1a1a1a;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  /* Informacje kontaktowe */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .info-item {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    padding: 25px;
    background: #f8f9fa;
    border-radius: 12px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .info-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .icon {
    color: #0066cc;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .info-item h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 8px 0;
    color: #1a1a1a;
  }

  .info-item a {
    color: #0066cc;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
  }

  .info-item a:hover {
    color: #0052a3;
    text-decoration: underline;
  }

  /* Formularz kontaktowy */
  .contact-form {
    background: #f8f9fa;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  /* Honeypot - ukryte pole */
  .honeypot {
    position: absolute;
    left: -9999px;
    width: 1px;
    height: 1px;
    overflow: hidden;
  }

  .form-group {
    margin-bottom: 25px;
  }

  label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: #333;
    font-size: 0.95rem;
  }

  input[type="text"],
  input[type="email"],
  textarea {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    font-size: 1rem;
    font-family: inherit;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    background: white;
  }

  input[type="text"]:focus,
  input[type="email"]:focus,
  textarea:focus {
    outline: none;
    border-color: #0066cc;
    box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
  }

  textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-btn {
    width: 100%;
    padding: 14px 32px;
    background: #0066cc;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1.05rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.2s ease;
  }

  .submit-btn:hover {
    background: #0052a3;
    transform: translateY(-2px);
  }

  .submit-btn:active {
    transform: translateY(0);
  }

  /* Responsywność */
  @media (max-width: 768px) {
    .contact-section {
      padding: 60px 20px;
    }

    h2 {
      font-size: 2rem;
      margin-bottom: 40px;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .contact-form {
      padding: 30px 20px;
    }

    .info-item {
      padding: 20px;
    }
  }
</style>

<script>
  // Ustawienie timestamp przy załadowaniu strony
  document.addEventListener('DOMContentLoaded', () => {
    const timestampField = document.getElementById('timestamp');
    if (timestampField) {
      timestampField.value = Date.now().toString();
    }
  });

  // Dodatkowa weryfikacja przed wysłaniem
  const form = document.querySelector('.contact-form');
  if (form) {
    form.addEventListener('submit', (e) => {
      // Sprawdzenie honeypot
      const honeypot = document.getElementById('website') as HTMLInputElement;
      if (honeypot && honeypot.value !== '') {
        e.preventDefault();
        console.log('Spam detected');
        return false;
      }

      // Sprawdzenie minimalnego czasu wypełnienia (np. 3 sekundy)
      const timestampField = document.getElementById('timestamp') as HTMLInputElement;
      if (timestampField) {
        const submitTime = Date.now();
        const loadTime = parseInt(timestampField.value);
        const timeDiff = (submitTime - loadTime) / 1000; // w sekundach

        if (timeDiff < 3) {
          e.preventDefault();
          alert('Proszę poświęcić więcej czasu na wypełnienie formularza.');
          return false;
        }
      }
    });
  }
</script>
